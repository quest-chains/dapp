{
  "name": "@dao-quest/contracts",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "typecheck": "tsc",
    "deploy-rinkeby": "hardhat run scripts/deploy.ts --network rinkeby",
    "lint": "eslint --ignore-path .gitignore \"./**/*.{ts,js}\"",
    "solhint": "solhint -f table \"contracts/{*,**/*}.sol\"",
    "format": "prettier --ignore-path .gitignore --write \"{*,**/*}.{ts,js,json,md,sol}\""
  },
  "devDependencies": {
    "@openzeppelin/contracts": "^4.4.1",
    "hardhat": "^2.8.2",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@typechain/ethers-v5": "^9.0.0",
    "@typechain/hardhat": "^4.0.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "chai": "^4.2.0",
    "dotenv": "^14.2.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.0",
    "hardhat-gas-reporter": "^1.0.7",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.18",
    "ts-node": "^10.1.0",
    "typechain": "^7.0.0",
    "typescript": "^4.5.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --write"
    ]
  }
}
